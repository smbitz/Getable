<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="wrap_content"
	android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" android:background="@drawable/filter_select_button_bg">

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <TextView
            android:id="@+id/nearbyFilterSelectedButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:layout_gravity="center" android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/filter_select_button_delete" android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
