<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="#ffffff">
	
    <com.codegears.getable.ui.AppHeader
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </com.codegears.getable.ui.AppHeader>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:background="@drawable/feed_empty_page" android:id="@+id/myFeedLayoutFindFriendLayout" android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/myFeedLayoutFindFriendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" android:background="@drawable/my_feed_friends_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>
    
    <ListView
        android:id="@+id/myFeedLayoutListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="#ffffff" android:cacheColorHint="#00000000" android:divider="#c0bbb8" android:dividerHeight="0.5dp">
    </ListView>

</LinearLayout>
