<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:background="#63bfec">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_name" android:layout_gravity="center"/>

    </LinearLayout>
    
    <ListView
        android:id="@+id/myFeedLayoutListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="#ffffff" android:cacheColorHint="#00000000">
    </ListView>

</LinearLayout>
