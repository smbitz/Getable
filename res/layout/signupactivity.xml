<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.codegears.getable.ui.AppHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.codegears.getable.ui.AppHeader>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="5">
            </LinearLayout>

            <Button
                android:id="@+id/signUpActivityDoneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done" android:layout_gravity="center" android:background="@null" android:textColor="#ffffff" android:layout_weight="1" android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#887f79" >

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent" >
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SIGN UP"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="#ffffff"
		    android:orientation="vertical" >

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:background="#ffffff"
		        android:orientation="vertical" >

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal" >

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>

		            <TextView
		                android:id="@+id/TextView08"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="Email"
		                android:textColor="#000000" />

		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:layout_weight="3.7" >
		            </LinearLayout>

		            <EditText
		                android:id="@+id/signUpActivityEditTextEmail"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:layout_weight="1.5"
		                android:background="@null"
		                android:ems="10"
		                android:textSize="15dp" android:lines="1">
		            	<requestFocus />
		            </EditText>

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:background="#ffffff"
		        android:orientation="vertical" >

		        <ImageView
		            android:id="@+id/ImageView06"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_line" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal" >

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>

		            <TextView
		                android:id="@+id/TextView06"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="First Name"
		                android:textColor="#000000" />

		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:layout_weight="2.2" >
		            </LinearLayout>

		            <EditText
		                android:id="@+id/signUpActivityEditTextFirstname"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:layout_weight="1.7"
		                android:background="@null"
		                android:ems="10"
		                android:textSize="15dp" android:lines="1"/>

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:background="#ffffff"
		        android:orientation="vertical" >

		        <ImageView
		            android:id="@+id/ImageView08"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_line" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal" >

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>

		            <TextView
		                android:id="@+id/TextView03"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="Last Name"
		                android:textColor="#000000" />

		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:layout_weight="2.2" >
		            </LinearLayout>

		            <EditText
		                android:id="@+id/signUpActivityEditTextLastName"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:layout_weight="1.5"
		                android:background="@null"
		                android:ems="10"
		                android:textSize="15dp" android:lines="1"/>

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:background="#ffffff"
		        android:orientation="vertical" >

		        <ImageView
		            android:id="@+id/ImageView03"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_line" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal" >

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>

		            <TextView
		                android:id="@+id/TextView05"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="Password"
		                android:textColor="#000000" />

		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:layout_weight="2.1" >
		            </LinearLayout>

		            <EditText
		                android:id="@+id/signUpActivityEditTextPassword"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:layout_weight="1.7"
		                android:background="@null"
		                android:ems="10"
		                android:textSize="15dp"
		                android:password="true" android:lines="1"/>

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="#ffffff"
	        android:orientation="vertical" android:id="@+id/signUpActivityLayoutGender">

	        <ImageView
	            android:id="@+id/ImageView11"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/image_line" />

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >

	            <LinearLayout
	                android:layout_width="5dp"
	                android:layout_height="match_parent" >
	            </LinearLayout>

	            <TextView
	                android:id="@+id/TextView06"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:text="Gender"
	                android:textColor="#000000" />

	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="1" >
	            </LinearLayout>

	            <TextView
	                android:id="@+id/signUpActivityEditTextGender"
	                android:layout_width="208dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center" android:textColor="#000000" android:textSize="15dp" android:background="@null"/>

	            <LinearLayout
	                android:layout_width="5dp"
	                android:layout_height="match_parent" >
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:background="#ffffff"
		        android:orientation="vertical" >

		        <ImageView
		            android:id="@+id/ImageView04"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_line" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal" >

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>

		            <TextView
		                android:id="@+id/TextView02"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="Mobile Phone"
		                android:textColor="#000000" />

		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:layout_weight="1.2" >
		            </LinearLayout>

		            <EditText
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:layout_weight="1.5"
		                android:background="@null"
		                android:ems="10"
		                android:textSize="15dp" android:id="@+id/signUpActivityEditTextMobilePhone" android:lines="1"
		                android:numeric="integer">
		            </EditText>

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:background="#ffffff"
		        android:orientation="vertical" >

		        <ImageView
		            android:id="@+id/ImageView05"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_line" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal" >

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>

		            <TextView
		                android:id="@+id/TextView01"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="Picture"
		                android:textColor="#000000" />

		            <LinearLayout
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_weight="1" >
		            </LinearLayout>

		            <ImageView
		                android:id="@+id/signUpActivityProfileImage"
		                android:layout_width="50dp"
		                android:layout_height="50dp"
		                android:src="@drawable/user_image_default" android:layout_gravity="center" android:scaleType="fitCenter"/>

		            <LinearLayout
		                android:layout_width="match_parent"
		                android:layout_height="match_parent" android:layout_weight="1">
		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffffff"
		        android:orientation="vertical" >

		        <ImageView
		            android:id="@+id/ImageView02"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_line" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal" >

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>

		            <TextView
		                android:id="@+id/TextView07"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="Just a few quick steps to get your started. After signing up, you can find friends on Getable, take and share photos, and see photos from around the web."
		                android:textColor="#000000" />

		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:layout_weight="3.2" >
		            </LinearLayout>

		            <EditText
		                android:id="@+id/editProfilePhoneNumber"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:layout_weight="2.1"
		                android:background="@null"
		                android:ems="10"
		                android:textSize="15dp" />

		            <LinearLayout
		                android:layout_width="5dp"
		                android:layout_height="match_parent" >
		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffffff"
		        android:orientation="vertical" >

		        <ImageView
		            android:id="@+id/ImageView07"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_line" />
		    </LinearLayout>
		</LinearLayout>
        
    </ScrollView>

</LinearLayout>
