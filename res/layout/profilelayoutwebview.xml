<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.codegears.getable.ui.AppHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.codegears.getable.ui.AppHeader>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="8">
            </LinearLayout>

            <Button
                android:id="@+id/profileLayoutWebViewOpenBrowserButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Browser" android:layout_gravity="center" android:background="@null" android:textColor="#ffffff" android:paddingRight="5dp"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/profileLayoutWebViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    
</LinearLayout>
